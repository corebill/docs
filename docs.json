{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Corebill",
  "colors": {
    "primary": "#0084C7",
    "light": "#0098E5",
    "dark": "#006DA3"
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png",
    "href": "https://corebill.io"
  },
  "favicon": "/logo/dark.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "guides/authentication",
              "guides/quickstart"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "guides/companies",
              "guides/customers",
              "guides/invoices",
              "guides/quotes",
              "guides/projects"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "guides/mcp"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "guides/pagination",
              "guides/errors",
              "guides/webhooks"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "openapi.yaml",
        "groups": [
          {
            "group": "Companies",
            "pages": [
              "GET /companies"
            ]
          },
          {
            "group": "Customers",
            "pages": [
              "GET /customers",
              "POST /customers",
              "GET /customers/{id}",
              "PATCH /customers/{id}",
              "DELETE /customers/{id}"
            ]
          },
          {
            "group": "Invoices",
            "pages": [
              "GET /invoices",
              "POST /invoices",
              "GET /invoices/{id}",
              "PATCH /invoices/{id}",
              "DELETE /invoices/{id}"
            ]
          },
          {
            "group": "Quotes",
            "pages": [
              "GET /quotes",
              "POST /quotes",
              "GET /quotes/{id}",
              "PATCH /quotes/{id}",
              "DELETE /quotes/{id}"
            ]
          },
          {
            "group": "Projects",
            "pages": [
              "GET /projects",
              "POST /projects",
              "GET /projects/{id}",
              "PATCH /projects/{id}",
              "DELETE /projects/{id}"
            ]
          },
          {
            "group": "Tasks",
            "pages": [
              "GET /projects/{id}/tasks",
              "POST /projects/{id}/tasks",
              "GET /projects/{id}/tasks/{taskId}",
              "PATCH /projects/{id}/tasks/{taskId}",
              "DELETE /projects/{id}/tasks/{taskId}"
            ]
          }
        ]
      },
      {
        "tab": "SDKs",
        "groups": [
          {
            "group": "SDKs",
            "pages": [
              "sdks/overview",
              "sdks/node"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.corebill.io",
          "icon": "browser"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/corebill",
          "icon": "github"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@corebill.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.corebill.io"
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/corebillio"
    }
  }
}
